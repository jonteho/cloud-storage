
@{
    ViewBag.Title = "Cloud Storage App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="brandText">Share your file</h2>

<form role="form" enctype="multipart/form-data" method="POST" action="@Url.Action("Upload", "Home")">
    <div class="form-group">
        <label for="file">File input</label>
        @*<input type="file" name="file" id="file" accept="image/*">*@
        <input type="file" name="file" id="file">
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        @*@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @id = "title", @placeholder = "Title", @maxlength = 30 })*@
        <input name="title" type="text" class="form-control" id="title" placeholder="Title" maxlength="30" />
    </div>
    <button type="submit" class="btn btn-default">Upload</button>
</form>

@if (ViewData["Error"] != null)
{
    <br/>
    <div class="alert alert-danger">@ViewData["Error"].ToString()</div>
}
   


